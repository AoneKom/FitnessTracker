<Window x:Class="FitnessApp.AddActivityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aktivität hinzufügen" Height="350" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Aktivitätstyp:" />
            <ComboBox x:Name="ActivityTypeBox" Margin="0,5,0,10">
                <ComboBoxItem Content="Laufen" />
                <ComboBoxItem Content="Gehen" />
                <ComboBoxItem Content="Schwimmen" />
                <ComboBoxItem Content="Fahrrad" />
                <ComboBoxItem Content="Andere" />
            </ComboBox>

            <TextBlock Text="Dauer (min):" />
            <TextBox x:Name="DurationBox" Margin="0,5,0,10"/>

            <TextBlock Text="Kalorienverbrauch:" />
            <TextBox x:Name="CaloriesBox" Margin="0,5,0,10"/>

            <TextBlock Text="Anzahl der Schritte (falls zutreffend):" />
            <TextBox x:Name="StepsBox" Margin="0,5,0,10"/>

            <Button Content="Speichern" Click="SaveActivity_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
