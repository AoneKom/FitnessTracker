<Window x:Class="FitnessApp.LoginRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness-Tracker" Height="350" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Email" />
            <TextBox x:Name="EmailTextBox" />

            <TextBlock Text="Benutzername" Margin="0,10,0,0"/>
            <TextBox x:Name="UsernameTextBox" />

            <TextBlock Text="Passwort" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Password="Password"/>

            <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Registrierung" Click="Register_Click" Margin="5"/>
                <Button Content="Login" Click="Login_Click" Width="66" Height="23"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
